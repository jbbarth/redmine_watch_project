<% if @project && (User.current.member_of?(@project) || @project.watcher_users.include?(User.current)) %>
  <% if @project.watcher_users.include? User.current %>
    <%= link_to l(:button_unwatch), unwatch_project_path(@project), :method => :delete, :class => "icon icon-fav" %>
  <% else %>
    <%= link_to l(:button_watch), watch_project_path(@project), :method => :post, :class => "icon icon-fav-off" %>
  <% end %>
<% end %>
